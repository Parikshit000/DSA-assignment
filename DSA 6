#include<stdio.h>
 int main()
 {
    int ko[4][4],i,j;
    int esum=0, osum=0;

    printf("Enter the element of a matrix : \n");
    for ( i = 0; i < 4; i++)
    {
        for (j = 0; j < 4; j++)
        {
            scanf("%d, \t",&ko[i][j]); 
        }    
    }
    printf("Check the element you entered in the matrix : \n");
    for ( i = 0; i < 4; i++)
    {
        for (j = 0; j < 4; j++)
        {
            printf("%d ",ko[i][j]); 
        }    
        printf("\n");
    }
    printf("Sum of even no. are : \n");
    for ( i = 0; i < 4; i++)
    {
        for (j = 0; j < 4; j++)
        {
            if (ko[i][j] / 2 == 0)
            {
                printf("%d ",esum=esum+ko[i][j]);
            }
                         
        }   
        printf("\n"); 
    }

    printf("\n Sum of odd no. are : \n");
    for ( i = 0; i < 4; i++)
    {
        for (j = 0; j < 4; j++)
        {
            if (ko[i][j]/2 == 1)
            {
                printf("%d ",osum=osum+ko[i][j]);
            }
                    
        }   
        printf("\n"); 
    }      
    return 0;
 }
